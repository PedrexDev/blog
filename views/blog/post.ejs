<% include ../partials/header.ejs %>
<div class="container" style="display: flex; flex-direction: column; ">
  <div class="image-container">
    <img src="<%= post.image %>" class="post-image">
    <div class="image-overlay">
      <h1 class="display-5 fw-bold"><%= post.title %></h1>
      <span><i class="fa-solid fa-calendar fa-xs"></i> <%= post.created.toDateString() %> â”ƒ <i class="fa-solid fa-user fa-xs"></i> <%= post.author.username %></span>
    </div>
  </div>
  <p class="post-show-content" style="margin-bottom: 20px;"><%= post.content %></p>

  <% if(currentUser && post.author.id.equals(currentUser._id)){ %>
  <!-- Floating Action Button -->
  <div class="fixed-action-btn">
    <a class="btn-floating btn-large red"
      ><i class="large material-icons">mode_edit</i></a
    >
    <ul>
      <li>
        <form action="/blog/<%= post._id %>?_method=delete" method="POST">
          <button class="btn-floating red">
            <i class="material-icons">delete</i>
          </button>
        </form>
      </li>
      <li>
        <a class="btn-floating yellow darken-1"
          ><i class="material-icons">format_quote</i></a
        >
      </li>
      <li>
        <a class="btn-floating green" href="/blog/<%= post._id %>/edit"
          ><i class="material-icons">edit</i></a
        >
      </li>
      <li>
        <a class="btn-floating blue"
          ><i class="material-icons">attach_file</i></a
        >
      </li>
    </ul>
  </div>
  <% }else{} %>
</div>
<% include ../partials/footer.ejs %>
