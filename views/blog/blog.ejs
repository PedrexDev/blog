<% include ../partials/header.ejs %>

<div class="container">
<div class="row">
  <div class="col-lg-12">
    <div id="hereSpawn"></div>
  </div>
  <div class="col-xs-12 col-md-9" id="contentIsHere">
    <% posts.forEach(function(item){ %>
      <div class="container">
        <div class="p-5 mb-4 rounded-3 position-relative" style="overflow: hidden;">
          <div class="background-image" style="background-image: url('<%= item.image %>'); filter: blur(10px) brightness(50%); width: 100%; height: 100%; position: absolute; top: 0%; left: 0%; background-size: cover; background-position: center;"></div>
          <div class="container position-relative">
            <h1 class="display-5 fw-bold"><a href="#"><%= item.title %></a></h1>
            <p class="col-md-8 fs-4"><%= item.content.slice(0, 150) %>...</p>
            <span class="post-card-date">Date: <%= item.created.toLocaleDateString() %>&nbsp; &nbsp; By: <%= item.author.username %></span>
            <a class="btn btn-primary btn-lg" href="/blog/<%= item._id %>">Read More <i class="angle double right icon"></i></a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <div class="col-xs-12 col-md-3">
    <div class="ad">
      <p>nejaky reklamy treba idk</p>
    </div>
  </div>
</div>
</div>

<% include ../partials/footer.ejs %>
