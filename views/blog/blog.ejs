<% const pageTitle = "Domů"; %>
<% include ../partials/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div id="hereSpawn"></div>
    </div>
    <div class="col-xs-12 col-md-9" id="contentIsHere">
      <% posts.forEach(function(item){ %>
        <div class="p-5 mb-4 rounded-3 position-relative" style="overflow: hidden;">
          <div class="background-image" style="background-image: url('<%= item.image %>'); filter: blur(10px) brightness(50%); width: 100%; height: 100%; position: absolute; top: 0%; left: 0%; background-size: cover; background-position: center;"></div>
          <div class="container position-relative">
            <h1 class="display-5 fw-bold"><a href="/blog/<%= item._id %>"><%= item.title %></a></h1>
            <span class="post-card-date"><i class="fa-solid fa-calendar fa-xs"></i> <%= item.created.toLocaleDateString() %> ┃ <i class="fa-solid fa-user fa-xs"></i> <a href="/u/<%= item.author.username %>" class="user-link"><%= item.author.username %></a></span>
            <p class="col-md-8 fs-4"><%= item.content.replace(/(<([^>]+)>)/gi, "").slice(0, 100) %>...</p>
          </div>
        </div>
      <% }) %>
    </div>
    <div class="col-xs-12 col-md-3">
      <div class="ad">
        <img src="/img/ads/template.png" style="width: 100%; border-radius: 6px;">
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
